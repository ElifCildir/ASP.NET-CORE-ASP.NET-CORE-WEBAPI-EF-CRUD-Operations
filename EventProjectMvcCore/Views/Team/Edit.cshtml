@model EventProjectMvcCore.Models.Team

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Teams</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
     @Html.HiddenFor(model=>model.TeamID)
            <div class="form-group">
                <label asp-for="TeamName" class="control-label"></label>
                <input asp-for="TeamName" class="form-control" />
                <span asp-validation-for="TeamName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TeamLogo" class="control-label"></label>
                <input asp-for="TeamLogo" class="form-control" />
                <span asp-validation-for="TeamLogo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TeamNumberofMember" class="control-label"></label>
                <input asp-for="TeamNumberofMember" class="form-control" />
                <span asp-validation-for="TeamNumberofMember" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="YearFounded" class="control-label"></label>
                <input asp-for="YearFounded" class="form-control" />
                <span asp-validation-for="YearFounded" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CoachId" class="control-label"></label>
                <input asp-for="CoachId" class="form-control" />
                <span asp-validation-for="CoachId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success" /> |
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
